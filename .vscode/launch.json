{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "server_simple_streamable_https",
      "type": "dart",
      "request": "launch",
      "program": "example/streamable_https/server_streamable_https.dart",
      "console": "terminal"
    },
    {
      "name": "client_streamable_https",
      "type": "dart",
      "request": "launch",
      "program": "example/streamable_https/client_streamable_https.dart",
      "console": "terminal"
    },
    {
      "name": "anthropic-client-example",
      "type": "dart",
      "request": "launch",
      "program": "example/anthropic-client/bin/main.dart",
      "args": ["dart", "../server_stdio.dart"],
      "env": {
        "ANTHROPIC_API_KEY": "YOUR_API_KEY"
      },
      "console": "terminal"
    },
    {
      "name": "gemini-client-example",
      "type": "dart",
      "request": "launch",
      "program": "example/gemini-client/bin/main.dart",
      "args": ["dart", "../server_stdio.dart"],
      "env": {
        "GEMINI_API_KEY": "YOUR_API_KEY"
      },
      "console": "terminal"
    },
    {
      "name": "Run All Tests",
      "type": "dart",
      "request": "launch",
      "program": "test_runner.dart",
      "console": "terminal"
    },
    {
      "name": "Run VM Tests",
      "type": "dart",
      "request": "launch",
      "program": "test_runner.dart",
      "args": ["--vm-only"],
      "console": "terminal"
    },
    {
      "name": "Run Web Tests",
      "type": "dart",
      "request": "launch",
      "program": "test_runner.dart",
      "args": ["--web-only"],
      "console": "terminal"
    }
  ]
}
